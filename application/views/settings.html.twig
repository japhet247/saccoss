{% extends "./includes/_layout.html.twig" %}

{% block title %} {{ title }} {% endblock %}


{% block main %}
  <header class="header bg-white b-b clearfix">
        <div class="row m-t-sm">
            <div class="col-sm-8 m-b-xs"> 
                <h5 style="font-weight:bold;">{{ page_title }}</h5>
            </div>
        </div>
    </header>
<section class="scrollable wrapper w-f">
<div class="row" >
{% for key, setting in settings %}
    
      <div class="col-sm-6">
        <section class="panel panel-default">
          <header class="panel-heading"> {{ lang(key)|upper }} </header>
          <table class="table table-striped m-b-none">
            <thead>
              <tr>
                <th>Name</th>
                <th>Value</th>
                <th width="70"></th>
              </tr>
            </thead>
            <tbody>
            {% for sett in setting %}
              <tr>
               <td>{{ sett['setting_display_name'] }}</td>
               <td>
                {% if key == 'charges' or key == 'limits' %}
                  {{ number_format(sett['setting_value']) }}
                {% else %}
                  {{ sett['setting_value'] }}
                {% endif %}
              </td>
               <td class="text-right">{{ modal_btn("","","fa fa-pencil","en/settings/edit/" ~ sett['setting_key'] ~ "/" ~ rawurlencode(sett['setting_value']),false) }}</td>
              </tr>
            {% endfor %}
            </tbody>
          </table>
        </section>
      </div>
    
{% endfor %}
</div>
</section>

{% endblock %}