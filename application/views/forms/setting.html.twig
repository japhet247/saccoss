<div class="modal-content"> 
    <div class="modal-header"> 

        <h4 class="modal-title">{{ title }}</h4> 
    </div> 
<form action="{{ site_url(url) }}" method="post"  id="edit-form" class="form-horizontal" data-validate="parsley">
    <div class="modal-body"> 
        
            <div class="form-group">
                
                <div class="col-sm-12">
                    {{ error|raw }}
            <input type="text" name="{{ name }}" value="{{ value }}" class="form-control parsley-validated"  data-required="true" >
                    
                </div>
            </div>
        
    </div> 
    <div class="modal-footer"> 
        <button type="submit" href="#" class="btn btn-primary" >Save</button>
        <a href="#" class="btn btn-default" data-dismiss="modal">Close</a> 
    </div> 
</form>
</div>
<!-- /.modal-content -->
<script>
$(document).ready(function(){
    submitAjax('#edit-form','.modal-dialog');
  
});
</script> 