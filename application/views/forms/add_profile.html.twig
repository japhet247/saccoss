{% extends "./includes/_layout.html.twig" %}

{% block title %} {{ title }} {% endblock %}


{% block main %}

    <header class="header bg-white b-b clearfix">
        <div class="row m-t-sm">
            <div class="col-sm-8 m-b-xs"> 
                <h5 style="font-weight:bold;">{{ title }}</h5>
            </div>
        </div>
    </header>
  <section class="scrollable wrapper w-f">
    <section class="panel panel-default" style="border: none;">
      <div class="col-sm-8" style="margin-left: 17%;">
            {{ error | raw }}
            <form class="form-horizontal" method="post" action="
            {{ (role['role_id']) ? site_url('en/role/save/' ~ role['role_id']) : site_url('en/role/save') }}" data-validate="parsley">
                <input type="hidden" name="{{ token_name }}" value="{{ token_hash }}" />
                <section class="panel panel-default">
                    <header class="panel-heading"> {{ page_title }} <strong></strong> 
                    </header>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Profile name</label>
                            <div class="col-sm-9">
                                <input type="text" name="name" value ="{{ set_value('name', role['name']) }}" class="form-control parsley-validated"  data-required="true" placeholder="CUSTOMER ADMIN">
                                
                            </div>
                        </div>
                        <div class="line line-dashed b-b line-lg pull-in"></div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Profile Description</label>
                            <div class="col-sm-9">
                                <input type="text" name="description" class="form-control parsley-validated"  data-required="true" value ="{{ set_value('description', role['description']) }}" placeholder="Brief description of the profile responsibilities">
                                
                            </div>
                        </div>
                        <input type="hidden" value="{{ role['role_id'] }}" name="role_id" />
                        <div class="line line-dashed b-b line-lg pull-in"></div>
                        <section class="scrollable">
                          {% for key, permission_category in permissions %}
                            <div class="table-responsive border-fl" style="margin-bottom:10px;">
                            <table class="table table-striped m-b-none" id="normal_merchant_services">
                            <header class="panel-heading border-btm"> <strong>{{ key|title }} Permissions</strong> </header>
                              <thead>
                                <tr>
                                  <th width="20"><label class="checkbox m-n i-checks">
                                      <input type="checkbox" name='cat_all'>
                                      <i></i></label>
                                  </th>
                                  <th>Permission</th>
                                </tr>
                              </thead>
                              
                              <tbody>
                                {% for permission in permission_category %}
                                  <tr>
                                    <td><label class="checkbox m-n i-checks">
                                        <input type="checkbox" name="permission_ids[]" 
                                        value="{{ permission['permission_id'] }}"
                                        {% if saved_permissions %}
                                          {% for saved in saved_permissions %}
                                            {% if permission['permission_id'] == saved['permission_id'] %}
                                              {{ set_checkbox("permission_ids", permission['permission_id'], TRUE)
                                              }}
                                            {% else %}
                                              {{ set_checkbox("permission_ids", permission['permission_id'])
                                              }}
                                            {% endif %}
                                          {% endfor %}
                                        {% else %}
                                        {{ set_checkbox("permission_ids", permission['permission_id'])
                                          }}
                                        {% endif %}
                                        />
                                        <i></i></label></td>  
                                    <td class = "service">{{ permission['permission']|title }}</td>   
                                  </tr>
                                {% endfor %}
                                 
                              </tbody>
                              
                            </table>
                          </div>
                          {% endfor %}

                    </section>
                        
                         
                    </div>
                    <footer class="panel-footer text-right bg-light lter">
                        <button type="submit" class="btn btn-primary btn-s-xs">Submit</button>
                    </footer>
                </section>
            </form>
        </div>
    </section>
</section>
{% endblock %}

